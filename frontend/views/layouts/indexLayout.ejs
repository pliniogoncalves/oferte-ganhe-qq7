<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Página Inicial' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>

    <%if(cssFiles){ %>
        <% cssFiles.forEach(file => { %>
            <link rel="stylesheet" href="<%= file %>">
        <% }) %>
    <% } %>

</head>
<body>
    
    <%- include('../components/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../components/sidebar.ejs') %> 
            <main class="col-md-10 col-lg-10 px-md-4 content" id="content">
                <%- body %>
            </main> 
        </div>
    </div>

    <%- include('../components/modal.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/logout.js"></script>
    <script src="/js/dynamicLoad.js"></script>
    <script src="/js/sidebar.js"></script>
    <script src="/js/modal.js"></script>
    <script src="/js/users.js"></script>
    <script src="/js/stores.js"></script>
    <script src="/js/profiles.js"></script>
    <script src="/js/stocks.js"></script>
    <script src="/js/talons.js"></script>
    <script src="/js/reports.js"></script>
    <script src="/js/config.js"></script>

    <!-- Modal para mensagens -->
<div id="modalMessage" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <p id="modalMessageText"></p>
    </div>
</div>

<script>
    // Exibir mensagens de erro do servidor
    const message = '<%= messages && messages.length ? messages[0] : "" %>';
    if (message) {
        const modal = document.getElementById('modalMessage');
        const modalText = document.getElementById('modalMessageText');
        modalText.textContent = message;
        modal.style.display = 'block';

        // Fechar modal ao clicar no botão "x"
        document.getElementById('closeModal').onclick = function () {
            modal.style.display = 'none';
        };
    }
</script>

<style>
    /* Estilo básico do modal */
    .modal {
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }
    .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 30%;
        text-align: center;
        border-radius: 10px;
    }
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }
    .close:hover, .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>

</body>
</html>
