<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">

        <%- include('../../components/backButton.ejs') %>

        <div class="w-100 text-center me-4 me-md-5">
            <h1 class="fw-bold">Editar Estoque</h1>
            <p class="text-muted">Preencha as informações abaixo para Editar o Estoque.</p>
        </div>   
    </div>
   
    <form id="stockForm">

        <input type="hidden" id="storeId" name="storeId" value="<%= stock.id_store || '' %>">
        
        <div class="mb-3">
            <label for="storeName" class="form-label">Loja</label>
            <input 
                type="text" 
                class="form-control" 
                id="storeName" 
                name="storeName" 
                value="<%= stock.storeNumber === '0' ? 'Matriz' : stock.storeNumber %>" 
                readonly>
        </div>
    

        <div class="mb-3">
            <label for="edit_current_stock">Estoque Atual</label>
            <input type="number" id="currentStock" name="currentStock" value="<%= stock.current_stock %>" required />
        </div>

        <div class="mb-3">
            <label for="edit_current_stock">Estoque Mínimo</label>
            <input type="number" id="minStock" name="minStock" value="<%= stock.minimum_stock %>" required />
        </div>

        <div class="mb-3">
            <label for="edit_current_stock">Estoque Recomendado</label>
            <input type="number" id="recommendedStock" name="recommendedStock" value="<%= stock.recommended_stock %>" required />
        </div>

        <div class="text-center mb-4">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-6 col-md-3 mb-2">
                    <button type="submit" id="submitBtn" class="btn btn-custom w-100">
                        <i class="fas fa-save"></i> Salvar Alterações
                    </button>
                </div>
            </div>
        </div>
        
    </form>
</div>
