<div class="container-fluid p-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        
        <%- include('../../components/backButton.ejs') %> 

        <div class="w-100 text-center me-4 me-md-5">
            <h1 class="fw-bold">Cadastrar Novo Perfil</h1>
            <p class="text-muted">Preencha os dados abaixo para cadastrar um novo Perfil.</p>
        </div>
    </div>

    <form id="profileForm">
        
        <div class="mb-3">
            <label for="name" class="form-label">Nome do Perfil</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Permiss√µes</label>
            <div>
                <% permissions.forEach(permission => { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="perm-<%= permission.id_permission %>" name="permissions" value="<%= permission.id_permission %>">
                        <label class="form-check-label" for="perm-<%= permission.id_permission %>"><%= permission.name_permission %></label>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="text-center mb-4">
            <div class="row justify-content-center">
              <div class="col-12 col-sm-6 col-md-3 mb-2">
                <button type="submit" id="submitBtn" class="btn btn-custom w-100">
                  <i class="fas fa-user-plus"></i> Cadastrar Perfil
                </button>
              </div>
            </div>
          </div>
    </form>
</div>
