<div class="container-fluid p-4">

    <div class="text-center mb-4">
        <h1 class="fw-bold">Gestão de Perfis de Acesso</h1>
        <p class="text-muted">Veja a lista de Perfis de Acesso e suas permissões.</p>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="input-group" style="max-width: 300px;">
            <input type="text" id="search" class="form-control" placeholder="Procurar por perfil">
            <button class="btn btn-success" id="searchBtn" style="background-color: #269447; color: #fff;" >Buscar</button>
        </div>
    </div>

    <table class="table table-bordered table-hover">
        <thead style="background-color: #269447; color: #fff;">
            <tr>
                <th>Nome</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if(profiles && profiles.length > 0){ %>
                <% profiles.forEach(profile => { %>
                    <tr>
                        <td><%= profile.name_profile %></td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-warning editar" data-id="<%= profile.id %>">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-danger deletar" data-id="<%= profile.id %>">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            <% }else{ %>
                <tr>
                    <td colspan="5">Nenhum Perfil encontrado.</td>
                </tr>
            <% } %>   
        </tbody>
    </table>

    <div class="text-end mb-3">
        <button class="btn btn-success" id="addUserBtn">Cadastrar Novo Perfil</button>
    </div>
</div>