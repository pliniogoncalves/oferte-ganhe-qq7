<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <%- include('../../components/backButton.ejs') %>
        <div class="w-100 text-center me-4 me-md-5">
            <h1 class="fw-bold">Editar Talão</h1>
            <p class="text-muted">Atualize as informações do talão abaixo.</p>
        </div>
    </div>

    <form id="talonForm">
        <div class="mb-3">
            <label for="dateReceived" class="form-label">Data de Recebimento</label>
            <input type="date" class="form-control" id="dateReceived" name="dateReceived" value="<%= talon.date_received %>" required>
        </div>

        <div class="mb-3">
            <label for="userReceived" class="form-label">Usuário Recebedor</label>
            <select class="form-control" id="userReceived" name="userReceived" required>
                <% users.forEach(user => { %>
                    <option value="<%= user.registration_users %>" <%= user.registration_users === talon.user_received ? 'selected' : '' %>><%= user.name_users %></option>
                <% }); %>
            </select>
        </div>

        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <input type="text" class="form-control" id="status" name="status" value="<%= talon.status_talon %>" required>
        </div>

        <div class="text-center mb-4">
            <button type="submit" class="btn btn-custom w-100">
                <i class="fas fa-save"></i> Salvar Alterações
            </button>
        </div>
    </form>
</div>
