<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        
        <%- include('../../components/backButton.ejs') %>

        <div class="w-100 text-center me-4 me-md-5">
            <h1 class="fw-bold">Registrar Envio</h1>
            <p class="text-muted">Preencha os dados abaixo para registrar o envio de um Tal√£o.</p>
        </div>

    </div>
    
    <form id="talonForm">

        <div id="userDetails" style="display: none;">
            {
                "role": "{{userDetails.role}}",
                "storeId": "{{userDetails.storeId}}"
            }
        </div>

        <div class="mb-3">
            <label for="store" class="form-label">Loja</label>
            <select class="form-control" id="store" name="store" <%= userDetails.role !== 'Administrador' ? 'disabled' : '' %> required>
                <% stores.forEach(store => { %>
                    <option value="<%= store.number_store %>" <%= userDetails.storeId == store.number_store ? 'selected' : '' %>>
                        <%= store.id_store === 1 ? store.name_store : (store.number_store === '0' ? 'Matriz' : store.number_store) %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Data</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
    
        <div class="mb-3">
            <label for="time" class="form-label">Hora</label>
            <input type="time" class="form-control" id="time" name="time" required>
        </div>

        <div class="mb-3">
            <label for="quantity" class="form-label">Quantidade</label>
            <input type="number" class="form-control" id="quantity" name="quantity" required>
        </div>      
        
        <div class="text-center mb-4">
            <div class="row justify-content-center">
              <div class="col-12 col-sm-6 col-md-3 mb-2">
                <button type="submit" id="submitBtn" class="btn btn-custom w-100">
                  <i class="fas fa-paper-plane"></i> Registrar Envio
                </button>
              </div>
            </div>
          </div>
    </form>
</div>
