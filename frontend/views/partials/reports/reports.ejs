<div class="text-center mb-4">
    <h1 class="fw-bold">Relatórios Disponíveis</h1>
    <p class="text-muted">Escolha um relatório para visualizar ou fazer o download em CSV.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead style="background-color: #269447; color: #fff;">
        <tr>
            <th>Nome do Relatório</th>
            <th class="text-center">Visualizar</th>
            <th class="text-center">Download CSV</th>
        </tr>
    </thead>
    <tbody>
        <% if(reports && reports.length > 0){ %>
            <% reports.forEach(report => { %>
                <tr>
                    <td><%= report.name %></td>
                    <td class="text-center">
                        <button 
                            class="btn btn-sm btn-warning btn-visualizar" 
                            data-view="<%= report.view %>">
                            <i class="fas fa-eye"></i>
                        </button>
                    </td>
                    <td class="text-center">
                        <button 
                            class="btn btn-sm btn-danger btn-download" 
                            data-download="<%= report.download %>">
                            <i class="fas fa-file-export"></i>
                        </button>
                    </td>
                </tr>
            <% }) %>
        <% }else{ %>
            <tr>
                <td colspan="5">Nenhum relatório disponível.</td>
            </tr>
        <% } %>   
    </tbody>
</table>
